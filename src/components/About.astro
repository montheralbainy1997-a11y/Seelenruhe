const t = translations[lang as keyof typeof translations] || translations.de;
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <div>
          <h2 class="text-4xl md:text-5xl font-light text-gray-800 mb-6">{t.title}</h2>
          <h3 class="text-xl text-emerald-600 mb-6 font-medium">{t.subtitle}</h3>
          <p class="text-lg text-gray-600 leading-relaxed">{t.description}</p>
        </div>

        <!-- Features -->
        <div class="space-y-6">
          {t.features.map((feature) => (
            <div class="flex items-start space-x-4">
              <div class="w-6 h-6 bg-emerald-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-800 mb-2">{feature.title}</h4>
                <p class="text-gray-600">{feature.description}</p>
              </div>
            </div>
          ))}
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 pt-8">
          {t.stats.map((stat) => (
            <div class="text-center">
              <div class="text-3xl font-bold text-emerald-600 mb-2">{stat.number}</div>
              <div class="text-sm text-gray-600 uppercase tracking-wide">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>

      <!-- Image -->
      <div class="relative">
        <div class="relative overflow-hidden rounded-2xl">
          <img 
            src="/images/zV3cG7qJYxN3.jpg" 
            alt="Seelenruhe Wellness Center"
            class="w-full h-[600px] object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
        </div>
        
        <!-- Floating Card -->
        <div class="absolute -bottom-8 -left-8 bg-white p-6 rounded-2xl shadow-2xl max-w-xs">
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-emerald-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <div class="text-lg font-semibold text-gray-800">{t.certified_title}</div>
              <div class="text-sm text-gray-600">{t.certified_subtitle}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


