---
import LanguageSwitcher from './LanguageSwitcher.tsx';

export interface Props {
  lang?: string;
}

const { lang = "de" } = Astro.props;

const translations = {
  de: {
    home: "Startseite",
    services: "Behandlungen",
    about: "Über uns",
    gallery: "Galerie",
    contact: "Kontakt",
    book: "Buchen"
  },
  en: {
    home: "Home",
    services: "Services",
    about: "About",
    gallery: "Gallery",
    contact: "Contact",
    book: "Book"
  },
  ar: {
    home: "الرئيسية",
    services: "الخدمات",
    about: "من نحن",
    gallery: "المعرض",
    contact: "اتصل بنا",
    book: "احجز"
  },
  fr: {
    home: "Accueil",
    services: "Services",
    about: "À propos",
    gallery: "Galerie",
    contact: "Contact",
    book: "Réserver"
  }
};

const t = translations[lang as keyof typeof translations] || translations.de;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-md transition-all duration-300">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-emerald-500 rounded-full flex items-center justify-center">
          <span class="text-white font-bold text-sm">S</span>
        </div>
        <span class="text-white text-xl font-bold">Seelenruhe</span>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href={`/?lang=${lang}`} class="text-white hover:text-emerald-400 transition-colors duration-300">{t.home}</a>
        <a href={`/services?lang=${lang}`} class="text-white hover:text-emerald-400 transition-colors duration-300">{t.services}</a>
        <a href={`/about?lang=${lang}`} class="text-white hover:text-emerald-400 transition-colors duration-300">{t.about}</a>
        <a href={`/gallery?lang=${lang}`} class="text-white hover:text-emerald-400 transition-colors duration-300">{t.gallery}</a>
        <a href={`/contact?lang=${lang}`} class="text-white hover:text-emerald-400 transition-colors duration-300">{t.contact}</a>
      </div>

      <!-- Language Switcher & Book Button -->
      <div class="flex items-center space-x-4">
        <!-- Language Switcher -->
        <LanguageSwitcher currentLang={lang} client:load />

        <!-- Book Button -->
        <a href={`/contact?lang=${lang}`} class="bg-emerald-500 hover:bg-emerald-600 text-white px-6 py-2 rounded-full transition-colors duration-300 font-medium">
          {t.book}
        </a>

        <!-- Mobile Menu Button -->
        <button class="md:hidden text-white">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    backdrop-filter: blur(10px);
  }
</style>

