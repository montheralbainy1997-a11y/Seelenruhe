---
import '../styles/global.css';

export interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "Seelenruhe - Premium Spa & Wellness Center", image = "/images/og-image.jpg" } = Astro.props;

const currentLocale = Astro.currentLocale || 'de';
const isRTL = currentLocale === 'ar';

const allLocales = ['de', 'en', 'ar', 'fr'];
const currentUrl = new URL(Astro.url.pathname, Astro.site);

const getLocalizedUrl = (locale: string) => {
  let path = Astro.url.pathname;
  // Remove existing locale prefix if it's not the default
  if (allLocales.includes(path.split('/')[1]) && path.split('/')[1] !== 'de') {
    path = '/' + path.split('/').slice(2).join('/');
  }

  if (locale === 'de') {
    return new URL(path, Astro.site).href;
  } else {
    return new URL(`/${locale}${path}`, Astro.site).href;
  }
};

const canonicalUrl = getLocalizedUrl(currentLocale);
---

<!doctype html>
<html lang={currentLocale} dir={isRTL ? 'rtl' : 'ltr'}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />

		{/* Open Graph / Facebook */} 
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:image" content={new URL(image, Astro.site).href} />

		{/* Twitter */} 
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={new URL(image, Astro.site).href} />

		{/* Canonical Link */} 
		<link rel="canonical" href={canonicalUrl} />

		{/* Hreflang Links */} 
		{allLocales.map(locale => (
			<link rel="alternate" hreflang={locale} href={getLocalizedUrl(locale)} />
		))}
		<link rel="alternate" hreflang="x-default" href={getLocalizedUrl('de')} />

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
	}
</style>


