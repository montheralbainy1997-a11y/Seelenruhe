---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import content from '../../content/content.json';

const currentLocale = 'en';
const pageContent = content.services_page[currentLocale] || content.services_page.de;
---

<Layout title={pageContent.title} description={pageContent.description}>
  <Header />
  <main>
    <section class="py-20">
      <div class="container mx-auto px-6">
        <h1 class="text-4xl font-bold text-center mb-12">{pageContent.heading}</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold mb-4">{pageContent.service_1_title}</h2>
            <p class="text-gray-700">{pageContent.service_1_description}</p>
          </div>
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold mb-4">{pageContent.service_2_title}</h2>
            <p class="text-gray-700">{pageContent.service_2_description}</p>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>


